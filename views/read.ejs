<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/public/stylesheets/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>
  </head>
  <body>
    <div class="bg-zinc-900 min-h-screen w-full p-10 text-white">
      <a href="/" class="text-blue-600">Back to home</a>
      <h1 class="text-3xl tracking-tighter mt-5 mb-5">All Users</h1>
      <div class="users flex flex-wrap gap-3">
        <% users.forEach(function(user) { %>
        <div class="h-80 rounded-md bg-zinc-800 w-64 p-3">
          <div class="w-full h-[200px] bg-zinc-700 mb-2">
            <img
              src="<%= user.image_url %>"
              alt="<%= user.name %>"
              class="w-full h-full object-cover"
            />
          </div>
          <h2 class="text-2xl tracking-tighter"><%= user.name %></h2>
          <p class="text-zinc-500 mb-3"><%= user.email %></p>
          <a href="/edit/<%= user._id %>" class="text-zinc-600">Edit</a>
          <a href="/delete/<%= user._id %>" class="text-red-600 ml-3">Delete</a>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
